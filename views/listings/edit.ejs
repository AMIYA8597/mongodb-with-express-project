<% layout("/layouts/boilerPlate") %>

<body>
  <br />
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit your listing</h3>
      <form
        method="post"
        action="/listings/<%= idlisting._id %>?_method=PUT"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title </label>

          <input
            name="listing[title]"
            value="<%= idlisting.title%>"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">title looks good</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description </label>

          <textarea name="listing[description]" class="form-control" required>
<%= idlisting.description%> </textarea
          >
          <div class="invalid-feedback">please enter a valid description</div>
          <!-- <input name="description" placeholder="enter description" type="text"> -->
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image </label>

          <input
            name="listing[image]"
            value="<%= idlisting.image%>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">please add a valid link for Image</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price </label>

            <input
              name="listing[price]"
              value="<%= idlisting.price%>"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">please enter a valid price</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="Country" class="form-label">Country </label>

            <input
              name="listing[country]"
              value="<%= idlisting.country%>"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">please enter a valid country</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="Location" class="form-label">Location </label>

          <input
            name="listing[location]"
            value="<%= idlisting.location%>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">please enter a valid location</div>
        </div>

        <button class="btn btn-dark edit-btn mt-3">Edit</button>

        <br /><br />
      </form>
    </div>
  </div>
</body>
